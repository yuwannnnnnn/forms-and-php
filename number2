<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
</head>
<body>
	<?php session_start(); ?>


	<form action="handleForm.php" method="POST">
		<p><input type="text" placeholder="First name here" name="firstName"></p>
		<p><input type="password" placeholder="Password here" name="password"></p>
		<p><input type="submit" value="Login" name="submitBtn"></p>
    </form>
    <a href="unset.php"><p><input type="submit" value="Logout" name="logoutBtn"></p></a>



    <h2>
		
		<?php
		if(isset($_SESSION['firstName'])) {
			echo "<h2>User logged in: ";
            echo $_SESSION['firstName'];
		}
		?>		
	</h2>

	<h2>
		
		<?php
		if(isset($_SESSION['password'])) {
			echo "<h2>Password: ";
            echo $_SESSION['password'];
		}
		?>		
	</h2>
	
</body>
</html>


<?php 

session_start();

// Check if submitBtn exists
if(isset($_POST['submitBtn'])) {

	// Get the first name from index.php
	$firstName = $_POST['firstName'];

	// Get the password from the input field
	$password = md5($_POST['password']);

	// Set the session variables
	$_SESSION['firstName'] = $firstName;
	$_SESSION['password'] = $password;

	// Go back to index.php
	header('Location: index2.php');
} elseif($firstName ==$_SESSION['firstName'] &&  $password == $_SESSION['password'] ){
    echo "account is already logged in";
}

?>



<?php  
session_start(); // Establish connection to the current session
session_unset(); // Delete all session variables
header('Location: index2.php'); // Go back to homepage
?>
